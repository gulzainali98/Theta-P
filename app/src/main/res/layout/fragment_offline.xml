<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- map fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#ffffffff"
        android:id="@+id/cab_selection_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/cab_type_selection_layout">

            <ImageButton
                android:id="@+id/bike_selection_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/bike"
                android:background="#00ffffff"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="27dp"
                android:tint="#aa79868e"
                android:layout_marginRight="5dp" />

            <ImageButton
                android:id="@+id/sedan_selecton_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/sedan"
                android:background="#00ffffff"
                android:tint="#2792CC" />

            <ImageButton
                android:id="@+id/suv_selection_image_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/suv"
                android:background="#00ffffff"
                android:layout_marginRight="15dp"
                android:tint="#aa79868e" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
